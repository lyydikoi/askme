= form_for @question do |f|
  - if @question.errors.any?
    #error_explanation
      %h2= "#{pluralize(@question.errors.count, "error")} prohibited this question from being saved:"
      %ul
        - @question.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :create
    = f.text_field :create
  .field
    = f.label :edit
    = f.text_field :edit
  .field
    = f.label :update
    = f.text_field :update
  .field
    = f.label :destroy
    = f.text_field :destroy
  .actions
    = f.submit 'Save'
